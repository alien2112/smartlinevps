{
	"info": {
		"_postman_id": "12345678-1234-1234-1234-123456789abc",
		"name": "Driver Pending Rides - Fixed",
		"description": "Complete test collection for driver pending ride list with all fixes applied",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Login Driver",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Save the token for next request",
							"var jsonData = pm.response.json();",
							"if (jsonData.data && jsonData.data.token) {",
							"    pm.environment.set(\"auth_token\", jsonData.data.token);",
							"    console.log(\"Token saved: \" + jsonData.data.token);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"phone\": \"+201208673028\",\n    \"password\": \"password123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/customer/auth/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"customer",
						"auth",
						"login"
					]
				},
				"description": "Login with driver credentials to get authentication token"
			},
			"response": []
		},
		{
			"name": "2. Get Pending Rides (With zoneId Header)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					},
					{
						"key": "zoneId",
						"value": "{{zone_id}}",
						"type": "text",
						"description": "REQUIRED: Driver's zone ID"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/driver/ride/pending-ride-list?limit=10&offset=1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"driver",
						"ride",
						"pending-ride-list"
					],
					"query": [
						{
							"key": "limit",
							"value": "10"
						},
						{
							"key": "offset",
							"value": "1"
						}
					]
				},
				"description": "Get pending rides for driver. IMPORTANT: Requires zoneId header!"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		}
	]
}
